#!/bin/bash

# Get the last line from seeds.b39 file
prompt=$(tail -n 1 ./seeds.b39)

# Call the API with the prompt and append the result to EngRap.text
./api1 "Provide me a well rhymed rap text with endless rhymes on the next words as base for plot for 2 verses and bridge with chorusfor rap battle: $prompt" >> EngRap.text
echo "" >> EngRap.text

# Translate the prompt to Russian
russian_prompt=$(./translate "$prompt")

# Call the API with the translated prompt and append the result to RuRap.text
./api1 "Напиши хорошо срифмованный текст для русского рэпа из 16 строк по следующим словам, которые являются seed фразой $russian_prompt на основе текста $(tail -n 1 EngRap.text)" >> RuRap.text
echo "" >> RuRap.text
echo "" >> RuRap.text
